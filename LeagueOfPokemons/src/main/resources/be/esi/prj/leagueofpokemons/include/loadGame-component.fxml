<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="loadGamePane" prefHeight="663.0" prefWidth="1061.0" style="-fx-background-color: pink;" stylesheets="@../style/loadGame_scene.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.esi.prj.leagueofpokemons.controller.LoadGameController">
    <children>
        <VBox alignment="CENTER" layoutX="3.0" layoutY="44.0" spacing="15" AnchorPane.bottomAnchor="87.79999999999995" AnchorPane.leftAnchor="3.0" AnchorPane.rightAnchor="2.7999999999999545" AnchorPane.topAnchor="44.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Charger une partie" />

            <TableView fx:id="savedGamesTable" fixedCellSize="150">
                <columns>
                    <TableColumn fx:id="gameNameColumn" prefWidth="150" resizable="false" text="Nom de la sauvegarde" />
                    <TableColumn fx:id="dateColumn" prefWidth="150" resizable="false" text="Date" />
                    <TableColumn fx:id="stageColumn" resizable="false" text="Stage" />
                    <TableColumn fx:id="pokemon1Column" prefWidth="210" resizable="false" text="Pokémon 1" />
                    <TableColumn fx:id="pokemon2Column" prefWidth="210" resizable="false" text="Pokémon 2" />
                    <TableColumn fx:id="pokemon3Column" prefWidth="210" resizable="false" text="Pokémon 3" />

                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="20">
                <Button onMouseClicked="#loadGame" prefHeight="30" prefWidth="120" text="Charger" />
                <Button onMouseClicked="#deleteGame" prefHeight="30" prefWidth="120" text="Supprimer" />
            </HBox>
        </VBox>
        <Pane layoutX="1008.0" layoutY="14.0" prefHeight="30.0" prefWidth="31.0">
            <children>
                <ImageView fitHeight="37.0" fitWidth="31.0" layoutX="-2.0" layoutY="-6.0" onMouseClicked="#hideLoadGame" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../pics/common/close.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
    </children>
</Pane>
